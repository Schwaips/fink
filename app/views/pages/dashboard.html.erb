<div class="mb-5 container  margintop">
  <div class="d-flex align-items-center mt-5">
    <% if current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, class: 'avatar-large avatar-bordered img-circle' %>
    <% else %>
      <%= image_tag "https://res.cloudinary.com/cb-dev/image/upload/v1610885202/buddiest/anonymous.jpg", class: 'avatar-large avatar-bordered img-circle' %>
    <% end %>
    <div class="ml-4">
      <h3>Bonjour <strong><%= current_user.first_name %></strong> 👨‍🏫</h3>
      <p><%= current_user.email %></p>
      <%= link_to  do %>
        <p class="pr-3"><i class="far fa-edit"></i> Modifier le profil </p>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-around">
    <div class="stat-card my-5">
      <h4>Mes étudiants</h4>
        <% current_user.students.first(5).each do |student| %>
          <div class="mb-2">
            <% if student.photo.attached? %>
              <img src="<%= cl_image_tag student.photo.key %>" class="avatar" />
            <% else %>
              <img src="https://res.cloudinary.com/cb-dev/image/upload/v1610885202/buddiest/anonymous.jpg" class="avatar"/>
            <% end %>
            <%= student.first_name %>
          </div>
        <% end %>
      <%= link_to "Voir plus", class: "btn button-blue" %>
    </div>
    <div class="stat-card my-5 ">
      <h4>Mes statistiques mensuelles</h4>
    </div>
  </div>
</div>







