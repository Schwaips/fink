<div class="margintop">
  <div class="row">
    <div class="col-3 left-menu">
      <h1 class="text-center">Gerer vos cours</h1>
      <div class="text-center">
      <%= link_to new_lecture_path, class:"btn button-gray" do %>
         <i class="fas fa-plus-circle"></i> Ajouter un cours
      <% end %>
      </div> <!-- text center add a course button -->
      <br>
      <% @lectures.each do |lecture| %>
        <div class="card-menu-course">
          <div class="d-flex">
            <img src="https://res.cloudinary.com/cb-dev/image/upload/e_bgremoval/v1612710092/Fink/icon-cours.png", class="image-left" alt="">
            <h3><%= lecture.title %></h3>
            <%= link_to edit_lecture_path(lecture), class:"modify-course" do %>
              <p class="pr-3"><i class="far fa-edit"></i></p>
            <% end %>
          </div> <!--d flex -->

          <div class="list-chapitre">
            <ul class="list-unstyled">
            <% lecture.blocks.each_with_index do |block, index| %>
                <li>Chapitre <%= index + 1 %> - <%= block.title %> </li>
            <% end %> <!-- each for blocks -->
                <%= link_to  new_lecture_block_path(lecture) do %>
                  <li><i class="fas fa-plus-circle"></i> Ajouter un chapitre</li>
                <% end %> <!-- link to end-->
              </ul>
          </div> <!-- div chapitre -->
        </div> <!-- card menu course -->
      <% end %> <!-- each for lectures -->
    </div> <!-- col-3 -->

    <div class="col-9">

    </div> <!-- col 9-->

  </div> <!--row  -->
</div> <!-- margin top -->
