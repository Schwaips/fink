  <%= f.input :photo, as: :file, label: "Miniature de l'offre" %>
  <%= f.input :category, label: "Categorie de votre lecture", collection: Lecture::CATEGORY %>
  <h3>LE TRUC POUR LES BLOCKS</h3>
  <%= f.simple_fields_for :blocks do |b| %>
