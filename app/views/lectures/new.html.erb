    <%= b.input :photos, as: :file, label: "ajouter des médias a la lecture", input_html: { multiple: true } %>
    <%= b.input :block_type, label: "Categorie de votre lecture", collection: Block::BLOCK_TYPE %>
  <% end %>
  <%= f.submit "Créer la lecture, avec les blocks", class: "btn btn-green mt-4" %>
<% end %>

