<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6 mt-5">
      <h2>Connexion</h2>

      <a href="https://slack.com/oauth/v2/authorize?user_scope=identity.basic,identity.email&client_id=1715641287046.1715642345142"><img alt=""Sign in with Slack"" height="40" width="172" src="https://platform.slack-edge.com/img/sign_in_with_slack.png" srcset="https://platform.slack-edge.com/img/sign_in_with_slack.png 1x, https://platform.slack-edge.com/img/sign_in_with_slack@2x.png 2x" class=""></a>


      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Connexion", class: "btn button-blue" %>
        </div>
      <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

