

<div class="row">
  <div class="col-3 left-menu">
      <h1 class="text-center light-color">Menu</h1>
        <div class="text-center">
          <%= link_to new_lecture_path, class:"btn button-white" do %>
            <i class="fas fa-plus-circle"></i> Ajouter un cours
          <% end %> <!-- Ajoute d'un cours boutton-->
        </div> <!-- text center button -->
       <br>
      <h3 class="text-align-right light-color">Gestion de vos cours</h3>
      <br>
      <% @lectures.each do |lecture|%>
        <div class="d-flex">
          <h5><i class="fas fa-graduation-cap"></i> <%= lecture.title %></h5>
          <%= link_to edit_lecture_path(lecture), class: "link-delete-lecture-left", method: :delete, data: { confirm: "Supprimer #{lecture.title}?" } do %>
            <p><i class="far fa-edit"></i></p>
          <% end %> <!-- end of edit lecture-->
          <%= link_to lecture_path(lecture), class: "link-delete-lecture-left", method: :delete, data: { confirm: "Supprimer #{lecture.title}?" } do %>
            <p><i class="far fa-trash-alt"></i></p>
          <% end %> <!-- end of destroy-->
        </div> <!-- end of d flex for title and edit and destroy-->

        <div class="list-of-blocks">
          <ul list="list-unstyled">
            <% lecture.blocks.each_with_index do |block, index|%>
              <li> <span>Chapitre <%= index + 1 %> - <%= block.title %></span></li>
            <% end %> <!-- end of block each -->
              <%= link_to new_lecture_block_path(lecture_id: lecture, block: @block), class: "link-add-chapter-lecture-left" do %>
               <li><i class="fas fa-plus-circle"></i> Ajouter un chapitre</li>
              <% end %>
          </ul>

        </div> <!-- block-list -->
      <% end %> <!-- lectures each  end -->


  </div> <!--col 3-->

  <div class="col-9">
      <%= yield %>
  </div>
</div> <!--row -->
