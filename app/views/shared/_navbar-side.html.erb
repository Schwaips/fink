
  <div class="left-menu">
      <h1 class="text-center black-color">Menu</h1>

       <br>
      <h3 class="text-align-right gray-color">Gestion de vos cours</h3>
      <div class="text-center my-4">
        <%= link_to new_lecture_path, class:"btn button-white" do %>
          <i class="fas fa-plus-circle"></i> Ajouter un cours
        <% end %> <!-- Ajoute d'un cours boutton-->
      </div> <!-- text center button -->

      <% @lectures.each do |lecture|%>
        <div class="d-flex">
          <%= link_to edit_lecture_path(lecture), class: "link-delete-lecture-left" do %>
            <h5 class="py-2"><i class="fas fa-graduation-cap"></i> <%= lecture.title %></h5>
          <% end %>
        </div> <!-- end of d flex for title and edit and destroy-->
      <% end %> <!-- lectures each  end -->
    <br>
    <h3 class="text-align-right gray-color mb-3">Parametres</h3>
      <%= link_to dashboard_path, class: "link-delete-lecture-left" do %>
        <h5> <i class="fas fa-user-cog setting-list"></i>  Profile</h5>
      <% end %>
      <h5> <i class="fas fa-people-carry setting-list"></i>  Aide</h5>
      <h5> <i class="fas fa-money-check-alt setting-list"></i>  Abonnements</h5>
      <h5> <i class="fas fa-terminal setting-list"></i>  CGV</h5>
  </div> <!--col 3-->

  <div class="main">
      <%= yield %>
  </div>






